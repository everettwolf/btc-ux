//Page Elements
html
  font-size 100%
  overflow-y scroll
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  margin 0
  font-size 13px
  line-height 1.231
  text-align center
  background-color #f6f1e7

body, button, input, select, textarea
  font-family sans-serif
  color #222

h1, h2, h3, h4, h5
  font-family 'Permanent Marker', cursive
  text-transform lowercase

::-moz-selection
  background #fe57a1
  color #fff
  text-shadow none

::selection
  background #fe57a1
  color #fff
  text-shadow none

a
  color #00e
  &:visited
    color #000
  &:hover
    color #06e
  &:focus
    outline thin dotted

a:hover, a:active
  outline 0
  text-decoration none

//Custom Styles
#container
  width 100%
  text-align center

.ad-unit-leaderboard
  width 460px
  margin 0 auto

#main-container
  width 100%
  position relative
  clear both
  background-color #e4ce99

#edge-top
  background url(/assets/images/edge-top-trans.png) repeat-x top left
  height 10px
  width 100%
  display inline-block
  float left
  margin-top -7px

#film-strip
  width 100%
  height 445px
  display inline-block
  background #d5bc78
  margin-top 215px
  position absolute
  left 0

.dot
  margin 7px 0
  width 100%
  height 18px
  left 0
  display inline-block
  background url(/assets/images/filmstrip-dot.png) repeat-x top left

.dot-top
  position absolute
  top 0

.dot-bottom
  position absolute
  bottom 0

#main
  clear both
  margin 0 auto
  position relative
  text-align left
  z-index 0
  display inline-block

#left-col
  margin-right 40px
  float left
  width 655px

#btc-widget
  position relative
  top -20px

#right-col
  float left

#social
  h3
    margin-top 0

.btn-social
  display inline-block
  margin 0 10px 15px 0
  width 50px
  height 50px
  background-repeat no-repeat
  float left

.btn-facebook
  background-image url("data:image/png;base64,")

.btn-twitter
  background-image url("data:image/png;base64,")

.ad-unit-billboard
  width 300px
  height 250px
  margin-bottom 15px
  clear both

header
  width 100%
  height 70px
  display inline-block
  text-align center
  float left

.promo
  display inline-block
  margin-bottom 15px
  background-color #f3e0a6
  text-decoration none
  .caption
    background-color #f3e0a6
    width 280px
    min-height 50px
    padding 10px
    font-family 'Permanent Marker', cursive
    text-transform lowercase
  .title
    color #ff6600
    font-size 20px
    &.black
      color #000

footer
  width 100%
  display inline-block
  background #f6f1e7
  text-align center

#footer
  background #e3ce98
  min-height 80px
  width 100%
  display inline-block
  float left
  .footer-links
    a
      color #b3a379
      text-decoration none
      margin-right 30px
      &:hover
        border-bottom 3px solid #b3a379
      &.last
        margin-right 0
  .copyright
    width 300px
    margin-left 25px
    display inline-block
    float left
    height 30px
    line-height 30px
    margin-top 1em
    font-size 14px
    color #c2af7c
    font-family 'Permanent Marker', cursive
    text-transform lowercase
    letter-spacing 1px

#footer-container
  margin 0 auto
  padding 15px 0
  text-align left
  display inline-block
  position relative

.footer-links
  display inline-block
  float left
  height 30px
  line-height 30px
  margin-top 1em
  font-size 16px
  color #b3a379
  font-family 'Permanent Marker', cursive
  text-transform lowercase
  letter-spacing 1px
  text-align center
  width 100%

#edge-bottom
  background url(/assets/images/edge-bottom-trans.png) repeat-x top left
  height 10px
  width 100%
  display inline-block
  float left

//Media Styles
@media only screen and (max-width: 479px)
  #main-container
    overflow hidden

  #main, header
    width 300px
    margin 0 auto

  header
    float none
    height auto
    margin-bottom 10px
    img
      width 300px

  #left-col
    width 300px
    clear both
    margin 0 0 15px

  #right-col
    width 300px
    clear both

@media (min-width: 480px) and (max-width: 639px)
  #main
    width 430px
    margin 0 15px

  header
    height auto
    margin-bottom 10px

  #left-col
    width 430px
    clear both
    margin-right 0

  #right-col
    width 300px
    clear both
    margin-top 35px

  footer
    margin-bottom 40px

  #footer-container
    width 300px
    margin 0 10px

  #footer
    height auto
    .copyright
      margin 0
    .footer-links
      width 300px

@media (min-width: 640px) and (max-width: 779px)
  #main
    width 640px
    margin 0 20px

  header
    width 768px

  #left-col
    width 640px
    clear both
    margin-right 0

  #right-col
    width 640px
    clear both
    float none

  .ad-unit-billboard
    float left

  .promo
    clear both
    float left

  footer
    margin-bottom 40px

  #footer-container
    width 430px
    margin 0 15px

  #footer
    height auto
    .copyright
      margin 0
      width 100%
      text-align center

@media (min-width: 780px)
  #main
    width 980px
    margin 0 20px

  #left-col
    width 640px
    margin-right 40px

  #right-col
    width 300px
    float left

  #footer-container
    width 980px
    margin 0 20px

  .footer-links
    width 405px